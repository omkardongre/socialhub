{
  "family": "post-service-task",
  "networkMode": "bridge",
  "containerDefinitions": [
    {
      "name": "post-service",
      "image": "ghcr.io/omkardongre/post-service:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3003
        }
      ],
      "essential": true,
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::socialhub-env-files/post-service.env",
          "type": "s3"
        }
      ],
        { "name": "DATABASE_URL", "value": "${DATABASE_URL}" },
        { "name": "PORT", "value": "3003" }
      ],
      "cpu": "256",
      "memory": "512"
    }
  ],
  "requiresCompatibilities": ["EC2"],
  "cpu": "256",
  "memory": "512"
}
