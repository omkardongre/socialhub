{
  "family": "media-service-task",
  "networkMode": "bridge",
  "containerDefinitions": [
    {
      "name": "media-service",
      "image": "ghcr.io/omkardongre/media-service:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3004
        }
      ],
      "essential": true,
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::socialhub-env-files/media-service.env",
          "type": "s3"
        }
      ],
        { "name": "MEDIA_BUCKET", "value": "socialhub-test" },
        { "name": "PORT", "value": "3005" }
      ],
      "cpu": "256",
      "memory": "512"
    }
  ],
  "requiresCompatibilities": ["EC2"],
  "cpu": "256",
  "memory": "512"
}
