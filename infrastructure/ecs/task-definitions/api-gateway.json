{
  "family": "api-gateway-task",
  "networkMode": "bridge",
  "containerDefinitions": [
    {
      "name": "api-gateway",
      "image": "ghcr.io/omkardongre/api-gateway:latest",
      "portMappings": [
        {
          "containerPort": 8082,
          "hostPort": 8082
        }
      ],
      "essential": true,
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::socialhub-env-files/api-gateway.env",
          "type": "s3"
        }
      ],
      
          "value": "http://localhost:3002"
        },
        {
          "name": "POST_SERVICE_URL",
          "value": "http://localhost:3003"
        },
        {
          "name": "CHAT_SERVICE_URL",
          "value": "http://localhost:3004"
        },
        {
          "name": "MEDIA_SERVICE_URL",
          "value": "http://localhost:3005"
        },
        {
          "name": "NOTIFICATION_SERVICE_URL",
          "value": "http://localhost:3006"
        },
        {
          "name": "CHAT_SERVICE_WS_URL",
          "value": "ws://localhost:3004"
        },
        {
          "name": "PORT",
          "value": "8082"
        }
      ],
      "cpu": "256",
      "memory": "512"
    }
  ],
  "requiresCompatibilities": ["EC2"],
  "cpu": "256",
  "memory": "512"
}
